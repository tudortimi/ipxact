         <ipxact:file>
            <ipxact:name>../../PV/pv_target_port.h</ipxact:name>
            <ipxact:fileType>unknown</ipxact:fileType>
            <ipxact:isIncludeFile>true</ipxact:isIncludeFile>
         </ipxact:file>
         <ipxact:file>
            <ipxact:name>../../PV/user_types.h</ipxact:name>
            <ipxact:fileType>unknown</ipxact:fileType>
            <ipxact:isIncludeFile>true</ipxact:isIncludeFile>
         </ipxact:file>
      </ipxact:fileSet>
   </ipxact:fileSets>
   <ipxact:parameters>
      <ipxact:parameter parameterId="addressBusSize" resolve="user" type="longint"
                        choiceRef="addressWidthChoice"
                        configGroups="requiredConfig"
                        prompt="RAM Depth (bytes):">
         <ipxact:name>addrsize</ipxact:name>
         <ipxact:value>16</ipxact:value>
      </ipxact:parameter>
   </ipxact:parameters>
</ipxact:component>