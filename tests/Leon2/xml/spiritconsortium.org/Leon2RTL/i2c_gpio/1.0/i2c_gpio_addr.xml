<ipxact:component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:ipxact="http://www.accellera.org/XMLSchema/IPXACT/1685-2014"
                  xsi:schemaLocation="http://www.accellera.org/XMLSchema/IPXACT/1685-2014 http://www.accellera.org/XMLSchema/IPXACT/1685-2014/index.xsd">
   <ipxact:vendor>spiritconsortium.org</ipxact:vendor>
   <ipxact:library>Leon2RTL</ipxact:library>
   <ipxact:name>i2c_gpio_addr</ipxact:name>
   <ipxact:version>1.0</ipxact:version>
   <ipxact:busInterfaces>
      <ipxact:busInterface>
         <ipxact:name>i2c_slave</ipxact:name>
         <ipxact:busType vendor="spiritconsortium.org" library="busdef.nxp" name="i2c" version="1.0"/>
         <ipxact:abstractionTypes>
            <ipxact:abstractionType>
               <ipxact:abstractionRef vendor="spiritconsortium.org" library="busdef.nxp" name="i2c_rtl" version="1.0"/>
               <ipxact:portMaps>
                  <ipxact:portMap>
                     <ipxact:logicalPort>
                        <ipxact:name>SCL</ipxact:name>
                     </ipxact:logicalPort>
                     <ipxact:physicalPort>
                        <ipxact:name>scl</ipxact:name>
                     </ipxact:physicalPort>
                  </ipxact:portMap>
                  <ipxact:portMap>
                     <ipxact:logicalPort>
                        <ipxact:name>SDA</ipxact:name>
                     </ipxact:logicalPort>
                     <ipxact:physicalPort>
                        <ipxact:name>sda</ipxact:name>
                     </ipxact:physicalPort>
                  </ipxact:portMap>
               </ipxact:portMaps>
            </ipxact:abstractionType>
         </ipxact:abstractionTypes>
         <ipxact:slave>
            <ipxact:memoryMapRef memoryMapRef="memory"/>
         </ipxact:slave>
      </ipxact:busInterface>
   </ipxact:busInterfaces>
   <ipxact:memoryMaps>
      <ipxact:memoryMap>
         <ipxact:name>memory</ipxact:name>
         <ipxact:addressBlock>
            <ipxact:name>defaultid4489720</ipxact:name>
            <ipxact:baseAddress>0</ipxact:baseAddress>
            <ipxact:range>2</ipxact:range>
            <ipxact:width>8</ipxact:width>
            <ipxact:register>
               <ipxact:name>inputreg</ipxact:name>
               <ipxact:addressOffset>'h0</ipxact:addressOffset>
               <ipxact:size>8</ipxact:size>
               <ipxact:access>read-only</ipxact:access>
               <ipxact:field>
                  <ipxact:name>inputreg_field</ipxact:name>
                  <ipxact:bitOffset>0</ipxact:bitOffset>
                  <ipxact:bitWidth>gpi</ipxact:bitWidth>
                  <ipxact:volatile>true</ipxact:volatile>
                  <ipxact:access>read-only</ipxact:access>
               </ipxact:field>
            </ipxact:register>
            <ipxact:register>
               <ipxact:name>outputreg</ipxact:name>
               <ipxact:addressOffset>'h1</ipxact:addressOffset>
               <ipxact:size>8</ipxact:size>
               <ipxact:access>read-write</ipxact:access>
               <ipxact:field>
                  <ipxact:name>outputreg_field</ipxact:name>
                  <ipxact:bitOffset>0</ipxact:bitOffset>
                  <ipxact:resets>
                     <ipxact:reset>
                        <ipxact:value>('h00) / $pow(2,0) % $pow(2,gpo)</ipxact:value>
                     </ipxact:reset>
                  </ipxact:resets>
                  <ipxact:bitWidth>gpo</ipxact:bitWidth>
                  <ipxact:access>read-write</ipxact:access>
               </ipxact:field>
            </ipxact:register>
         </ipxact:addressBlock>
      </ipxact:memoryMap>
   </ipxact:memoryMaps>
   <ipxact:model>
      <ipxact:views>
         <ipxact:view>
            <ipxact:name>verilogSource</ipxact:name>
            <ipxact:envIdentifier>:modelsim.mentor.com:</ipxact:envIdentifier>
            <ipxact:envIdentifier>:vcs.synopsys.com:</ipxact:envIdentifier>
            <ipxact:envIdentifier>:designcompiler.synopsys.com:</ipxact:envIdentifier>
            <ipxact:componentInstantiationRef>verilogSource</ipxact:componentInstantiationRef>
         </ipxact:view>
         <ipxact:view>
            <ipxact:name>vhdlSource</ipxact:name>
            <ipxact:envIdentifier>:ncsim.cadence.com:</ipxact:envIdentifier>
            <ipxact:componentInstantiationRef>vhdlSource</ipxact:componentInstantiationRef>
         </ipxact:view>
      </ipxact:views>
      <ipxact:instantiations>
         <ipxact:componentInstantiation>
            <ipxact:name>verilogSource</ipxact:name>
            <ipxact:language>verilog</ipxact:language>
            <ipxact:moduleName>i2c_gpio_addr</ipxact:moduleName>
            <ipxact:moduleParameters>
               <ipxact:moduleParameter minimum="1" maximum="8" dataType="integer">
                  <ipxact:name>gpibits</ipxact:name>
                  <ipxact:value>gpi</ipxact:value>
               </ipxact:moduleParameter>
               <ipxact:moduleParameter minimum="1" maximum="8" dataType="integer">
                  <ipxact:name>gpobits</ipxact:name>
                  <ipxact:value>gpo</ipxact:value>
               </ipxact:moduleParameter>
            </ipxact:moduleParameters>
            <ipxact:fileSetRef>
               <ipxact:localName>fs-verilogSource</ipxact:localName>
            </ipxact:fileSetRef>
         </ipxact:componentInstantiation>
         <ipxact:componentInstantiation>
            <ipxact:name>vhdlSource</ipxact:name>
            <ipxact:language>vhdl</ipxact:language>
            <ipxact:moduleName>i2c_gpio_addr</ipxact:moduleName>
            <ipxact:moduleParameters>
               <ipxact:moduleParameter minimum="1" maximum="8" dataType="integer">
                  <ipxact:name>gpibits</ipxact:name>
                  <ipxact:value>gpi</ipxact:value>
               </ipxact:moduleParameter>
               <ipxact:moduleParameter minimum="1" maximum="8" dataType="integer">
                  <ipxact:name>gpobits</ipxact:name>
                  <ipxact:value>gpo</ipxact:value>
               </ipxact:moduleParameter>
            </ipxact:moduleParameters>
            <ipxact:fileSetRef>
               <ipxact:localName>fs-verilogSource</ipxact:localName>
            </ipxact:fileSetRef>
            <ipxact:fileSetRef>
               <ipxact:localName>fs-vhdlWrapper</ipxact:localName>
            </ipxact:fileSetRef>
         </ipxact:componentInstantiation>
      </ipxact:instantiations>
      <ipxact:ports>
         <ipxact:port>
            <ipxact:name>scl</ipxact:name>
            <ipxact:wire>
               <ipxact:direction>in</ipxact:direction>
            </ipxact:wire>
         </ipxact:port>
         <ipxact:port>
            <ipxact:name>sda</ipxact:name>
            <ipxact:wire>
               <ipxact:direction>inout</ipxact:direction>
            </ipxact:wire>
         </ipxact:port>
         <ipxact:port>
            <ipxact:name>address</ipxact:name>
            <ipxact:wire>
               <ipxact:direction>in</ipxact:direction>
               <ipxact:vectors>
                  <ipxact:vector>
                     <ipxact:left>9</ipxact:left>
                     <ipxact:right>0</ipxact:right>
                  </ipxact:vector>
               </ipxact:vectors>
            </ipxact:wire>
         </ipxact:port>
         <ipxact:port>
            <ipxact:name>gpi</ipxact:name>
            <ipxact:wire>
               <ipxact:direction>in</ipxact:direction>
               <ipxact:vectors>
                  <ipxact:vector>
                     <ipxact:left>gpi - 1</ipxact:left>
                     <ipxact:right>0</ipxact:right>
                  </ipxact:vector>
               </ipxact:vectors>
            </ipxact:wire>
         </ipxact:port>
         <ipxact:port>
            <ipxact:name>gpo</ipxact:name>
            <ipxact:wire>
               <ipxact:direction>out</ipxact:direction>
               <ipxact:vectors>
                  <ipxact:vector>
                     <ipxact:left>gpo - 1</ipxact:left>
                     <ipxact:right>0</ipxact:right>
                  </ipxact:vector>
               </ipxact:vectors>
            </ipxact:wire>
         </ipxact:port>
      </ipxact:ports>
   </ipxact:model>
   <ipxact:fileSets>
      <ipxact:fileSet>
         <ipxact:name>fs-verilogSource</ipxact:name>
         <ipxact:file>
            <ipxact:name>data/i2c_gpio/RTL/i2c_gpio_addr.v</ipxact:name>
            <ipxact:fileType>verilogSource</ipxact:fileType>
            <ipxact:logicalName>i2c_gpio_lib</ipxact:logicalName>
         </ipxact:file>
      </ipxact:fileSet>
      <ipxact:fileSet>
         <ipxact:name>fs-vhdlWrapper</ipxact:name>
         <ipxact:file>
            <ipxact:name>data/i2c_gpio/RTL/i2c_gpio_addr.vhd</ipxact:name>
            <ipxact:fileType>vhdlSource</ipxact:fileType>
            <ipxact:logicalName>i2c_gpio_lib</ipxact:logicalName>
         </ipxact:file>
      </ipxact:fileSet>
   </ipxact:fileSets>
   <ipxact:parameters>
      <ipxact:parameter parameterId="gpi" resolve="user" prompt="Number input bits:" minimum="1"
                        maximum="8">
         <ipxact:name>gpibits</ipxact:name>
         <ipxact:value>4</ipxact:value>
      </ipxact:parameter>
      <ipxact:parameter parameterId="gpo" resolve="user" prompt="Number output bits:" minimum="1"
                        maximum="8">
         <ipxact:name>gpobits</ipxact:name>
         <ipxact:value>4</ipxact:value>
      </ipxact:parameter>
   </ipxact:parameters>
</ipxact:component>